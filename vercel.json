{
    "version": 2,
    "builds": [
        {
            "src": "src/app.js",
            "use": "@vercel/node"
        },
        {
            "src": "client/package.json",
            "use": "@vercel/static-build",
            "config": {
                "distDir": "build"
            }
        }
    ],
    "routes": [
        {
            "src": "/api/(.*)",
            "dest": "src/app.js"
        },
        {
            "src": "/js/(.*\\.js)",
            "headers": {
                "Content-Type": "text/javascript"
            },
            "dest": "/public/js/$1"
        },
        {
            "src": "/css/(.*\\.css)",
            "headers": {
                "Content-Type": "text/css"
            },
            "dest": "/public/css/$1"
        },
        {
            "src": "/(.*)",
            "dest": "client/$1"
        }
    ],
    "env": {
        "NODE_ENV": "production"
    }
} 