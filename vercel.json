{
    "version": 2,
    "builds": [
        {
            "src": "src/app.js",
            "use": "@vercel/node"
        },
        {
            "src": "public/**",
            "use": "@vercel/static"
        }
    ],
    "routes": [
        {
            "src": "/api/(.*)",
            "dest": "src/app.js"
        },
        {
            "src": "/js/(.*\\.js)",
            "headers": {
                "Content-Type": "text/javascript"
            },
            "dest": "/public/js/$1"
        },
        {
            "src": "/css/(.*\\.css)",
            "headers": {
                "Content-Type": "text/css"
            },
            "dest": "/public/css/$1"
        },
        {
            "src": "/(.*)",
            "dest": "/public/$1"
        }
    ]
} 